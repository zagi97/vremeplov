rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ============================================
    // ðŸ”§ HELPER FUNCTIONS
    // ============================================

    // Check if user is admin (using isAdmin flag in user document)
    function isAdmin() {
      return request.auth != null &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Check if user is owner
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // ============================================
    // ðŸ‘¤ USERS COLLECTION - PRIVACY PROTECTED
    // ============================================
    match /users/{userId} {
      // âœ… LIST: Authenticated users can list (needed for leaderboard)
      allow list: if isAuthenticated();

      // âœ… GET: Any authenticated user can read profiles (needed for like stats updates)
      // Privacy is maintained via client-side filtering in profile pages
      allow get: if isAuthenticated();

      // âœ… CREATE: User creates own profile on signup
      allow create: if isAuthenticated() &&
                    isOwner(userId) &&
                    request.resource.data.uid == request.auth.uid &&
                    !request.resource.data.keys().hasAny(['isAdmin', 'isBanned']);

      // âœ… UPDATE: User updates own profile, admin can update any
      // Special case: Any authenticated user can update ONLY stats/badges/lastActive (for like/photo approval)
      allow update: if isAdmin() ||
                    (isOwner(userId) &&
                     !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin', 'isBanned', 'uid'])) ||
                    (isAuthenticated() &&
                     request.resource.data.diff(resource.data).affectedKeys().hasOnly(['stats', 'badges', 'lastActive']));

      // âœ… DELETE: Only admin
      allow delete: if isAdmin();
    }

    // ============================================
    // ðŸ“· PHOTOS COLLECTION
    // ============================================
    match /photos/{photoId} {
      // âœ… GET: Approved photos public, owner can see own pending photos when authenticated
      // Legacy photos without isApproved field are treated as approved for backward compatibility
      allow get: if resource.data.isApproved == true
                 || !resource.data.keys().hasAny(['isApproved'])
                 || isAdmin()
                 || (isAuthenticated() && isOwner(resource.data.uploaderId));

      // âœ… LIST: Approved photos public, authenticated users see own pending photos
      // When viewing your profile: you see all your photos (approved + pending)
      // When viewing other profiles: you only see their approved photos
      // Legacy photos without isApproved field are treated as approved for backward compatibility
      allow list: if resource == null ||
                  resource.data.isApproved == true ||
                  !resource.data.keys().hasAny(['isApproved']) ||
                  isAdmin() ||
                  (isAuthenticated() && request.query.limit <= 100 && isOwner(resource.data.uploaderId));

      // âœ… CREATE: Authenticated users can upload
      allow create: if isAuthenticated() &&
                    request.resource.data.uploaderId == request.auth.uid &&
                    request.resource.data.authorId == request.auth.uid &&
                    request.resource.data.isApproved == false;

      // âœ… UPDATE: Owner can update unapproved, admin can update all
      // Legacy photos without isApproved field are treated as approved for likes/views updates
      allow update: if isAdmin() ||
                    (isAuthenticated() &&
                     isOwner(resource.data.uploaderId) &&
                     resource.data.isApproved == false) ||
                    (isAuthenticated() &&
                     (resource.data.isApproved == true || !resource.data.keys().hasAny(['isApproved'])) &&
                     request.resource.data.diff(resource.data).affectedKeys()
                       .hasOnly(['likes', 'views', 'updatedAt']));

      // âœ… DELETE: Only admin
      allow delete: if isAdmin();
    }

    // ============================================
    // ðŸ’¬ COMMENTS COLLECTION
    // ============================================
    match /comments/{commentId} {
      // âœ… GET: Approved comments public
      allow get: if resource.data.isApproved == true ||
                 isAdmin() ||
                 (isAuthenticated() && isOwner(resource.data.userId));

      // âœ… LIST: Approved comments public, admin has no limit restriction
      allow list: if resource == null ||
                  resource.data.isApproved == true ||
                  isAdmin() ||
                  (isAuthenticated() && request.query.limit <= 100 && isOwner(resource.data.userId));

      // âœ… CREATE: Authenticated users can comment (instant approval, no moderation)
      allow create: if isAuthenticated() &&
                    request.resource.data.userId == request.auth.uid &&
                    request.resource.data.text.size() > 0 &&
                    request.resource.data.text.size() <= 250 &&
                    request.resource.data.isApproved == true;

      // âœ… UPDATE: Only admin
      allow update: if isAdmin();

      // âœ… DELETE: Admin or author
      allow delete: if isAdmin() ||
                    (isAuthenticated() && isOwner(resource.data.userId));
    }

    // ============================================
    // ðŸ·ï¸ TAGGED PERSONS COLLECTION
    // ============================================
    match /taggedPersons/{tagId} {
      allow get: if resource.data.isApproved == true ||
                 isAdmin() ||
                 (isAuthenticated() && (
                   isOwner(resource.data.addedByUid) ||
                   isOwner(resource.data.photoAuthorId)
                 ));

      allow list: if resource == null ||
                  resource.data.isApproved == true ||
                  isAdmin() ||
                  (isAuthenticated() && request.query.limit <= 100 && (
                    isOwner(resource.data.addedByUid) ||
                    isOwner(resource.data.photoAuthorId)
                  ));

      allow create: if isAuthenticated() &&
                    request.resource.data.addedByUid == request.auth.uid &&
                    request.resource.data.name.size() > 0 &&
                    request.resource.data.name.size() <= 40 &&
                    request.resource.data.isApproved == false;

      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // ============================================
    // ðŸ‘¥ FOLLOWS COLLECTION - PRIVACY PROTECTED
    // ============================================
    match /follows/{followId} {
      allow get: if isAuthenticated() && (
        isOwner(resource.data.followerId) ||
        isOwner(resource.data.followingId) ||
        isAdmin()
      );

      allow list: if isAuthenticated() && (
        request.query.limit <= 100 &&
        (resource == null ||
         isOwner(resource.data.followerId) ||
         isOwner(resource.data.followingId) ||
         isAdmin())
      );

      allow create: if isAuthenticated() &&
                    isOwner(request.resource.data.followerId) &&
                    request.resource.data.followerId != request.resource.data.followingId;

      allow delete: if isAuthenticated() && isOwner(resource.data.followerId);
    }

    // ============================================
    // ðŸ“Š ACTIVITIES - PRIVACY PROTECTED
    // ============================================
    match /activities/{activityId} {
      allow get: if isAuthenticated() && (
        isOwner(resource.data.userId) ||
        isAdmin()
      );

      allow list: if isAuthenticated() &&
                  request.query.limit <= 100 && (
        resource == null ||
        isOwner(resource.data.userId) ||
        isAdmin()
      );

      allow create: if isAuthenticated();

      allow update: if isAuthenticated() && (
        isOwner(resource.data.userId) || isAdmin()
      );

      allow delete: if isAuthenticated() && (
        isOwner(resource.data.userId) || isAdmin()
      );
    }

    // ============================================
    // â¤ï¸ USER LIKES - PRIVACY PROTECTED
    // ============================================
    match /userLikes/{likeId} {
      allow get: if isAuthenticated() && (
        isOwner(resource.data.userId) ||
        isAdmin()
      );

      allow list: if isAuthenticated() &&
                  request.query.limit <= 100 && (
        resource == null ||
        isOwner(resource.data.userId) ||
        isAdmin()
      );

      allow create, update: if isAuthenticated() &&
                            isOwner(request.resource.data.userId);

      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }

    // ============================================
    // ðŸ‘ï¸ USER VIEWS - PRIVACY PROTECTED
    // ============================================
    match /userViews/{viewId} {
      allow get: if isAuthenticated() && (
        isOwner(resource.data.userId) ||
        isAdmin()
      );

      allow list: if isAuthenticated() &&
                  request.query.limit <= 100 && (
        resource == null ||
        isOwner(resource.data.userId) ||
        isAdmin()
      );

      allow create, update: if isAuthenticated() &&
                            isOwner(request.resource.data.userId);

      allow delete: if isAuthenticated() && isOwner(resource.data.userId);
    }

    // ============================================
    // ðŸ”” NOTIFICATIONS
    // ============================================
    match /notifications/{notificationId} {
      allow get: if isAuthenticated() &&
                 isOwner(resource.data.userId);

      allow list: if isAuthenticated() &&
                  request.query.limit <= 100 && (
        resource == null ||
        isOwner(resource.data.userId)
      );

      allow create: if isAuthenticated();

      allow update: if isAuthenticated() &&
                    isOwner(resource.data.userId);

      allow delete: if isAdmin();
    }

    // ============================================
    // ðŸš« DENY ALL OTHER COLLECTIONS
    // ============================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

// ============================================
// ðŸ“¦ FIREBASE STORAGE RULES
// ============================================
service firebase.storage {
  match /b/{bucket}/o {
    // âœ… NEW FORMAT: photos/{userId}/{photoId}/{fileName}
    // Secure - user can only upload to their own folder
    match /photos/{userId}/{photoId}/{fileName} {
      // READ: Public (approved photos should be accessible)
      allow read: if true;

      // WRITE: Only owner can upload to their folder
      allow write: if request.auth != null &&
                      request.auth.uid == userId &&
                      request.resource.contentType.matches('image/jpeg|image/jpg|image/png|image/webp') &&
                      !request.resource.contentType.matches('image/gif') &&
                      request.resource.size < 10 * 1024 * 1024 && // 10MB limit
                      fileName.matches('^[a-zA-Z0-9_-]+\\.(jpg|jpeg|png|webp)$'); // Prevent path traversal
    }

    // âœ… LEGACY FORMAT: photos/{photoId}/{fileName}
    // Backward compatible - read-only for old photos
    match /photos/{photoId}/{fileName} {
      // READ: Public (for backward compatibility with existing photos)
      allow read: if true;

      // WRITE: Disabled - force new uploads to use secure format
      allow write: if false;
    }

    // âœ… ADMIN: Full access
    match /{allPaths=**} {
      allow read, write, delete: if request.auth != null &&
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
